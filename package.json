{
  "name": "dissolution-web",
  "version": "0.0.1",
  "description": "This is a Node.js frontend application for the Companies House dissolution service.",
  "main": "dist/app.js",
  "engines": {
    "node": ">=24.0.0"
  },
  "repository": {
    "url": "https://github.com/companieshouse/dissolution-web"
  },
  "license": "MIT",
  "scripts": {
    "start": "node dist/app.js",
    "build": "gulp build",
    "build:clean": "gulp build:clean",
    "lint": "eslint 'src/*.ts' 'src/**/*.ts' 'test/**/*.ts'",
    "lint:fix": "eslint 'src/*.ts' 'src/**/*.ts' 'test/**/*.ts' --fix",
    "test": "mocha 'test/**/*.test.ts'",
    "test:coverage": "nyc npm test",
    "start:watch": "nodemon",
    "chs-dev": "nodemon --legacy-watch",
    "sonarqube-base-branch": "sonar-scanner",
    "sonarqube-pull-request": "sonar-scanner -D sonar.pullrequest.base=master",
    "sonarqube": "branch=$(git rev-parse --symbolic-full-name --abbrev-ref HEAD); if [[ $branch == \"HEAD\" ]]; then echo $branch && npm run sonarqube-base-branch; else echo $branch && npm run sonarqube-pull-request; fi;"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.974.0",
    "@aws-sdk/s3-request-presigner": "^3.974.0",
    "@companieshouse/api-sdk-node": "^2.0.324",
    "@companieshouse/node-session-handler": "^5.2.8",
    "@companieshouse/structured-logging-node": "^2.0.4",
    "@companieshouse/web-security-node": "^4.4.14",
    "@hapi/joi": "^17.1.1",
    "axios": "^1.12.0",
    "body-parser": "^1.20.3",
    "cookie-parser": "^1.4.7",
    "crypto": "^1.0.1",
    "dashify": "^2.0.0",
    "express": "^4.21.2",
    "govuk-frontend": "^3.11.0",
    "helmet": "^4.2.0",
    "http-status-codes": "^2.1.4",
    "inversify": "^6.0.3",
    "inversify-binding-decorators": "^4.0.0",
    "inversify-express-utils": "6.4.8",
    "lodash": "^4.17.20",
    "momentjs": "^2.0.0",
    "nocache": "^2.1.0",
    "node-jose": "^2.0.0",
    "nunjucks": "^3.2.2",
    "reflect-metadata": "^0.2.2",
    "tsconfig-paths": "^3.9.0",
    "tslib": "^2.0.3",
    "uuid": "^8.3.1"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.6",
    "@types/chai": "^4.2.14",
    "@types/cookie-parser": "^1.4.9",
    "@types/dashify": "^1.0.0",
    "@types/express": "4.17.17",
    "@types/hapi__joi": "^17.1.6",
    "@types/helmet": "^4.0.0",
    "@types/ioredis": "^4.17.8",
    "@types/jsdom": "^16.2.5",
    "@types/lodash": "^4.14.165",
    "@types/mocha": "^8.0.4",
    "@types/multer": "^1.4.5",
    "@types/node-jose": "^1.1.5",
    "@types/nunjucks": "^3.1.3",
    "@types/sinon": "^9.0.9",
    "@types/supertest": "^2.0.10",
    "@types/uuid": "^8.3.0",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "chai": "^4.2.0",
    "del": "^6.0.0",
    "eslint": "^8.57.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.6.0",
    "eslint-plugin-standard": "^5.0.0",
    "gulp": "^5.0.1",
    "gulp-typescript": "^6.0.0-alpha.1",
    "jsdom": "^16.4.0",
    "minimist": "^1.2.8",
    "mocha": "^10.0.0",
    "nodemon": "^3.0.1",
    "nyc": "^15.1.0",
    "sinon": "^9.2.1",
    "sonarqube-scanner": "^3.3.0",
    "supertest": "^7.1.3",
    "ts-mockito": "^2.6.1",
    "ts-node": "^10.0.0",
    "typescript": "^4.0.5"
  },
  "overrides": {
    "micromatch": "^4.0.8",
    "minimist": "^1.2.8",
    "shelljs": "^0.8.5",
    "semver": "^7.5.4",
    "qs": "^6.11.2",
    "nanoid": "^3.2.0",
    "glob-parent": "^6.0.2",
    "merge": "^2.1.1",
    "braces": "^3.0.0",
    "ajv": "^6.12.3"
  },
  "nodemonConfig": {
    "watch": [
      "./src"
    ],
    "ext": "ts,js,json,njk,scss,env",
    "legacyWatch": true,
    "ignore": [
      "**/*.test.ts"
    ],
    "exec": "node --inspect=0 -r ts-node/register src/app.ts"
  }
}
