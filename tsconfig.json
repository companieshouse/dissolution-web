{
    "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "outDir": "dist",
      "sourceMap": true,
      "strict": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "noImplicitReturns": true,
      "noFallthroughCasesInSwitch": true,
      "pretty": true,
      "baseUrl": "./src",
      "removeComments": true,
      "experimentalDecorators": true,
      "esModuleInterop": true,
      "emitDecoratorMetadata": true,
      "moduleResolution": "node",
      "importHelpers": true,
      "plugins": [
        {
          "name": "typescript-tslint-plugin"
        }
      ],
      "paths": {
        "app/*": ["./*"],
        "test/*": ["../test/*"]
      }
    },
    "include": [
      "src/**/*"
    ],
    "exclude": [
      "node_modules"
    ]
  }
